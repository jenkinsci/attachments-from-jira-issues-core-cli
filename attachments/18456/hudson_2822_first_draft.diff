+    public void doFullscreen( StaplerRequest req, StaplerResponse rsp ) throws IOException, ServletException {
+        req.setCharacterEncoding("UTF-8");
+
+        forwardToFullScreen(getDisplayName() + " view [full screen]", getUrl(), this, req, rsp );

+<!--
+  <%@ attribute name="jobs" required="true" type="java.util.Collection" %>
+-->
+<j:jelly xmlns:j="jelly:core" xmlns:x="jelly:xml" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
+         xmlns:t="/lib/hudson" xmlns:f="/lib/form">
+    <html>
+      <head>
+        <title>${title}</title>
+        <style type="text/css">
+    .project {
+      width: 45%;
+      height: 26%;
+      border-style: solid;
+      margin: 1%;
+      padding: 1%;
+      float: left;
+    }
+    .result-FAILURE {
+      background-color: red;
+    }
+    .result-SUCCESS {
+      background-color: green;
+    }
+    .project-name {
+      font-size: 300%;
+    }
+    .project-build {
+      font-size: 200%;
+      position: relative;
+      float: right;
+    }
+        </style>
+      </head>
+      <body>
+
+          <!--t:setIconSize/-->
+          <div class="fullscreen">
+            <j:if test="${!empty(jobs)}">
+              <j:forEach var="job" items="${jobs}">
+                <j:set var="lBuild" value="${job.lastBuild}"/>
+                <j:set var="lcBuild" value="${job.lastCompletedBuild}"/>
+                <j:set var="lsBuild" value="${job.lastSuccessfulBuild}"/>
+                <j:set var="lfBuild" value="${job.lastFailedBuild}"/>
+                
+                <div class="project result-${lBuild.result}">
+                  <div class="project-name">${job.displayName}</div>
+                  <div class="project-build">
+                    <j:choose>
+                      <j:when test="${lBuild!=null}">${lBuild.number}</j:when>
+                      <j:otherwise>${%N/A}</j:otherwise>
+                    </j:choose>
+                  </div>
+                </div>
+
+              </j:forEach>
+            </j:if>
+          </div>
+      </body>
+    </html>
+
+
+</j:jelly>

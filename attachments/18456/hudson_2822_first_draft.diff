+    private static void forwardToFullScreen(String title, String url, View v, StaplerRequest req, StaplerResponse rsp) throws IOException, ServletException {
+      List<Job> lastJobs = new ArrayList<Job>();
+      for (TopLevelItem item : v.getItems()) {
+          if (item instanceof Job) {
+              Job job = (Job) item;
+              lastJobs.add(job);
+          }
+      }
+
+        req.setAttribute("title",title);
+        req.setAttribute("url",url);
+        req.setAttribute("view",v);
+        req.setAttribute("jobs",lastJobs);
+        req.setAttribute("rootURL", Hudson.getInstance().getRootUrl());
+
+        rsp.forward(v, "fullscreenView", req);
+    }
